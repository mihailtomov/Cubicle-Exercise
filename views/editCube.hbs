<main>
  <h1>Edit Cube</h1>
  <div class="form">
    <form method="POST">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" value="{{cube.name}}">
      <label for="name">Description</label>
      <textarea id="name" name="description">{{cube.description}}</textarea>
      <label for="image">ImageUrl</label>
      <input type="text" id="image" name="imageUrl" value="{{cube.imageUrl}}">
      <label for="difficulty">Difficulty</label>
      <select id="difficulty" name="difficultyLevel">
        <option value="1" {{#if (isEqual 1 cube.difficultyLevel)}} selected {{/if}}>1 - Very Easy</option>
        <option value="2" {{#if (isEqual 2 cube.difficultyLevel)}} selected {{/if}}>2 - Easy</option>
        <option value="3" {{#if (isEqual 3 cube.difficultyLevel)}} selected {{/if}}>3 - Medium (Standard 3x3)</option>
        <option value="4" {{#if (isEqual 4 cube.difficultyLevel)}} selected {{/if}}>4 - Intermediate</option>
        <option value="5" {{#if (isEqual 5 cube.difficultyLevel)}} selected {{/if}}>5 - Expert</option>
        <option value="6" {{#if (isEqual 6 cube.difficultyLevel)}} selected {{/if}}>6 - Hardcore</option>
      </select>
      <input type="submit" value="Edit">
    </form>
  </div>
</main>